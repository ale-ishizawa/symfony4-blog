{% extends 'base.html.twig' %}
{% block title %}
    Usuários
{% endblock %}
{% block body %}
    <h1>Usuários</h1>
    <a href="{{ path('user_create') }}" class="btn btn-sm btn-success"> Criar Usuário</a>
    <hr>
    <table class="table table-stripped">
        <thead>
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
            <th>Criado em</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        {# users => array passado como parâmetro no método index da UserController  #}
        {% for user in users %}
        <tr>
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.createdAt|date('d/m/Y H:i:s') }}</td>
            <td>
                <a href="{{ path('user_edit', {'id': user.id }) }}" class="btn btn-sm btn-primary">Editar</a>
                <a href="{{ path('user_remove', {'id': user.id }) }}" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}



