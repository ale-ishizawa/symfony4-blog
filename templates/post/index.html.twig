{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Postagens Recentes ✅</h1>
    <a href="{{ path('post_create') }}" class="btn btn-sm btn-success">Criar Post</a>
    <table class="table table-stripped">
        <thead>
            <tr>
                <th>#Id</th>
                <th>Título</th>
                <th>Descrição</th>
                <th>Conteúdo</th>
                <th>Criado em</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
        <tr>
            <td> {{ post.id }} </td>
            <td> {{ post.title }} </td>
            <td> {{ post.description }} </td>
            <td> {{ post.content }} </td>
            <td> {{ post.createdAt|date('d/m/Y H:i:s') }} </td>
            <td>
                <a href="{{ path('post_edit', {'id': post.id}) }}">Editar</a> |
                <a href="{{ path('post_remove', {'id': post.id}) }}">Apagar</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
